<div class="container">
  <h1>Rate &amp; Review</h1>

  <div class="row">
    <div class="col-sm-12">
      <div class="user-header m-b-20">
        <div class="user-header__left">
          <img src="https://placehold.it/300x300" alt="..." class="user-avatar img-circle">
        </div>

        <div class="user-header__right">
          <h2>
            Jane Smith
          </h2>

          <div class="user-rating">
            <select class="rating-select user-rating-select" name="rating" data-current-rating="3.6" autocomplete="off">
              <option value=""></option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form id="feedback-form" action="">
    <div class="form-group text-center">
      <label class="control-label" for="">How was it</label>
      <div class="review-rating">
        <select class="rating-select review-rating-select" name="rating" data-current-rating="3.6" autocomplete="off">
          <option value=""></option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
    </div>

    <div class="text-right">
      <button class="btn btn-primary" type="submit" value="Submit">
        Submit
      </button>
    </div>
  </form>

</div>
